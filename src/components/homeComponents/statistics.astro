---
import type { statisticSection } from "@/types/home-project";

interface Props {
    statistics: statisticSection;
}

const { statistics } = Astro.props;
---

<div class="w-full px-20 h-auto bg-red-100">
    <div class="flex items-center justify-center py-4">
        <div class="text-center">
            <h2 class="text-xl py-3">{statistics.title}</h2>
            <p class="py-3 text-justify">{statistics.text}</p>
        </div>
    </div>
    <div>
        {
            statistics.statSection?.map((stats) => (
                <div class="text-center my-4">
                    <h3 class="text-2xl font-bold">{stats.number}</h3>
                    <p class="text-lg">{stats.text}</p>
                </div>
            ))
        }
    </div>
    <div class="py-10 flex items-center justify-center">
        <a
            href={statistics.link}
            target="_blank"
            class="bg-gray-400 text-white font-bold py-2 px-4 rounded cursor-pointer hover:bg-slate-600"
        >
            {statistics.button}
        </a>
    </div>
</div>
