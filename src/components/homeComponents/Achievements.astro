---
import type { achievementSection } from "@/types/home-project";

interface Props {
    achievements: achievementSection;
}

const { achievements } = Astro.props;
---

<div
    class="w-full flex justify-center flex-col items-center bg-custom-blue h-auto sm:h-auto py-8 sm:py-16"
>
    <div>
        <div class="text-center px-6 sm:px-8 py-2">
            <h2 class="py-5 text-3xl sm:text-4xl md:text-5xl font-bold text-white drop-shadow-lg">
                {achievements.title}
            </h2>
            <p class="text-justify text-white drop-shadow-lg text-sm sm:text-base md:text-lg">
                {achievements.text}
            </p>
        </div>
        <div class="w-full flex flex-wrap justify-center gap-6 sm:gap-8 md:gap-12">
            {
                achievements.projectSection?.map((projects) => (
                    <div class="text-center my-4 max-w-xs sm:max-w-sm md:max-w-md">
                        <img src={projects.heroPreview.url} class="mt-4 w-full h-auto" />
                        <div class="bg-slate-50 bg-opacity-30 h-[150px] sm:h-[200px] flex justify-center items-center">
                            <div class="text-center px-4">
                                <h3 class="text-xl sm:text-2xl font-bold text-custom-blue">
                                    {projects.title}
                                </h3>
                                <p class="text-sm sm:text-base md:text-lg">{projects.intro}</p>
                            </div>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</div>
