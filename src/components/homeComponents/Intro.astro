---
import type { introductionSection } from "@/types/home-project";

interface Props {
    introduction: introductionSection;
}

const { introduction } = Astro.props;
---

<div
    class="w-full h-[350px] bg-custom-green flex items-center"
    style="background-image: url('https://res.cloudinary.com/dronteu5m/image/upload/v1737321923/strapi-demo/casabg_5f6e63cbfc.webp'); background-position: bottom left; background-repeat: no-repeat; background-size: 300px 300px;"
>
    <div class="px-40">
        <h2 class="text-5xl text-white drop-shadow-lg font-bold">
            {introduction.title}
        </h2>
        <p class="py-5 text-white drop-shadow-lg">
            {introduction.text}
        </p>
        <a
            href={introduction.link}
            target="_blank"
            class="bg-white text-custom-green font-bold py-2 px-4 rounded cursor-pointer hover:bg-slate-600 drop-shadow-lg"
            >{introduction.button}</a
        >
    </div>
</div>
