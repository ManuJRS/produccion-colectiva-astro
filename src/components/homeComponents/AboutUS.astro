---
import type { insideSection } from "@/types/home-project";

interface Props {
    inside: insideSection;
}

const { inside } = Astro.props;
---

<div class="flex justify-center w-full h-auto px-16">
    <div class="text-center py-10">
        <div>
            <h2 class="text-3xl text-custom-gray font-bold">{inside.title}</h2>
        </div>
        <img src={inside.image?.url} alt="" class="w-4/5 mx-auto py-10" />
        <a
            href={inside.link}
            target="_blank"
            class="bg-custom-blue text-white font-bold py-2 px-4 rounded cursor-pointer hover:bg-slate-600"
            >{inside.button}</a
        >
    </div>
</div>
