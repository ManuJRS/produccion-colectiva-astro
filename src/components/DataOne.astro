---
import type { DataComponent } from "@/types/home-project";

interface Props {
    DataZone: DataComponent;
}

const { DataZone } = Astro.props;
---

<div class="w-full px-20 h-80 bg-red-100">
    <div class="flex items-center justify-center py-4">
        <div class="text-center">
            <h2 class="text-xl py-3">{DataZone.TitleData}</h2>
            <p class="py-3 text-justify">{DataZone.TextData}</p>
        </div>
    </div>
    <div class="grid grid-cols-3 gap-2">
        <div class="bg-blue-500 h-16">
            <div class="flex items-center justify-center py-2">
                <div class="text-center">
                    <h3>{DataZone.SpanNumberOne}</h3>
                    <p>{DataZone.SpanTextOne}</p>
                </div>
            </div>
        </div>
        <div class="bg-green-500 h-16">
            <div class="flex items-center justify-center py-2">
                <div class="text-center">
                    <h3>{DataZone.SpanNumberTwo}</h3>
                    <p>{DataZone.SpanTextTwo}</p>
                </div>
            </div>
        </div>
        <div class="bg-red-500 h-16">
            <div class="flex items-center justify-center py-2">
                <div class="text-center">
                    <h3>{DataZone.SpanNumberThree}</h3>
                    <p>{DataZone.SpanTextThree}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="py-10 flex items-center justify-center">
        <a
            href={DataZone.ButtonDataLink}
            target="_blank"
            class="bg-gray-400 text-white font-bold py-2 px-4 rounded cursor-pointer hover:bg-slate-600"
            >{DataZone.ButtonDataText}</a
        >
    </div>
</div>
