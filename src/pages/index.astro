---
import { getHomeData } from "@/services/home-project";
import Layout from "../layouts/Layout.astro";
import Hero from "@/components/homeComponents/hero.astro";
import Intro from "@/components/homeComponents/Intro.astro";
import Statistics from "@/components/homeComponents/statistics.astro";
import Achievements from "@/components/homeComponents/Achievements.astro";
import AboutUs from "@/components/homeComponents/AboutUS.astro";

const homeData = await getHomeData();
const { hero, introduction, statistics, achievements, inside } = homeData;
---

<Layout>
	<Hero hero={hero} />
	<Intro introduction={introduction} />
	<Statistics statistics={statistics} />
	<Achievements achievements={achievements} />
	<AboutUs inside={inside} />
</Layout>
